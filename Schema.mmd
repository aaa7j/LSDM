erDiagram

    PLAYER {
        varchar player_id PK
        varchar full_name
        varchar first_name
        varchar last_name
        varchar birthdate
        varchar country
        varchar college
        varchar height
        varchar weight
    }

    TEAM {
        varchar team_abbr PK
        varchar team_name
        varchar city
        varchar arena_name
        integer arena_capacity
        varchar coach
        varchar league
    }

    TEAM_SEASON {
        integer season PK
        varchar team_abbr PK
        integer games_played
        double mov
        double sos
        double srs
        double offensive_rating
        double defensive_rating
        double pace
        double ts_percent
        double attendance
    }

    GAME {
        varchar game_id PK
        date game_date
        integer season
        varchar home_team_abbr
        varchar away_team_abbr
        integer home_score
        integer away_score
        varchar winner
        integer attendance
    }

    PLAYER_GAME_BOX {
        varchar game_id PK
        varchar player_id PK
        varchar team_abbr
        integer season
        integer minutes
        integer fgm
        integer fga
        double fg_pct
        integer fg3m
        integer fg3a
        double fg3_pct
        integer ftm
        integer fta
        double ft_pct
        integer oreb
        integer dreb
        integer reb
        integer ast
        integer stl
        integer blk
        integer tov
        integer pf
        integer pts
        double plus_minus
    }

    PLAYER ||--o{ PLAYER_GAME_BOX : "plays in"
